{
    "root": true,
    "ignorePatterns": ["lib/", "src/js/3D/lib/"],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "globals": {
		/* Framework*/
        "nw": true,
		"chrome": true,
		
		/* Third Party */
		"Vue": true,
        "THREE": true,

		/* App Globals*/
		"BUILD_RELEASE": true,
		"crash": true,
		"getErrorDump": true,

		/* EMCA2020 */
		"BigInt": true,

		/* Node builtins, defined in ./src/builtins.js */
		"path": true,
		"util": true,
		"fs": true,
		"fsp": true,
		"assert": true,
		"node_crypto": true,
		"zlib": true,
		"EventEmitter": true,
		"cp": true,
		"os": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        /* Overrides from recommended ruleset */
        "no-unused-vars": "off",
		"no-case-declarations": "off",
		"no-prototype-builtins": "off",

        /* Custom */
        "no-trailing-spaces": "off",
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "keyword-spacing": "error"
    },
    "plugins": [
        "vue"
    ],
    "extends": [
        "plugin:vue/base",
        "eslint:recommended"
    ]

}